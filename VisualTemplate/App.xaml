<Application
    x:Class="VisualTemplate.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisualTemplate"
    RequestedTheme="Light"
    xmlns:converters="using:VisualTemplate.View.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="BulbapediaApiBaseUrl">http://bulbapedia.bulbagarden.net/w/</x:String>
            <x:String x:Key="BulbapediaBaseUrl">http://bulbapedia.bulbagarden.net/wiki/</x:String>
            <x:String x:Key="ErrorMessage">An error ocurred&#x0a;If the problem persists send information about the error</x:String>
            <x:String x:Key="InternetErrorMessage">An error occurred&#x0a;Check your internet configuration and try again later</x:String>
            <x:String x:Key="DefaultMessage">Select an option from the menu</x:String>
            <converters:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter"/>
            <converters:FrameStringConverter x:Key="FrameStringConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
